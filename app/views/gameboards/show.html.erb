          <%= hidden_field_tag :'gameboard[id]',  @gameBoard.id%>
          <%= hidden_field_tag :'piece[xposition]', 2%>
          <%= hidden_field_tag :'piece[yposition]', 2 %>
          <%= submit_tag "Place Piece" %>
          <% end %>
        </td>
    </tr>
</table>
